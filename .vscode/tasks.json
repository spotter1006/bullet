{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "debug build",
			"command": "/usr/bin/g++",
			"args": [
				"-pthread",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/*.c*",
				"-o",
				"${workspaceFolder}/build/debug/bullet",
				"-L/usr/local/lib",
				// "-l:libu8g2arm.a",	// Display library	(SPI)
				"-lgpiodcxx",		// for GPIO access. This has to be after the object file creation step or symbols are not found
				"-l:libws2811.a"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++-9"
		},
		{
			"type": "cppbuild",
			"label": "release build",
			"command": "/usr/bin/g++",
			"args": [
				"-pthread",
				"${workspaceFolder}/*.c*",
				"-o",
				"${workspaceFolder}/build/release/bullet",
				"-lgpiodcxx"		// This has to be after the object file creation step or symbols are not found
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++-9"
		},
		{
			"type": "cppbuild",
			"label": "IMU test",
			"command": "/usr/bin/g++",
			"args": [
				"-pthread",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/test/testimu.cpp",
				"${workspaceFolder}/src/wit_c_sdk.c", 
				"${workspaceFolder}/src/imu.cpp*",
				"-o",
				"${workspaceFolder}/build/debug/testimu",
				"-L/usr/local/lib",

			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++-9"
		}
	]
}